@model TodoListMVC.Models.TodoItem
@{
    ViewData["Title"] = "Task Details";
}

<div class="container mt-4">
    <h2>Task Details</h2>

    <div class="card mt-3">
        <div class="card-body">
            <h5 class="card-title">@Model.Title</h5>
            <p class="card-text"><strong>Description:</strong> @Model.Description</p>
            <p><strong>Category:</strong> @Model.Category</p>
            <p><strong>Priority:</strong> @Model.Priority</p>
            <p><strong>Status:</strong> <span class="badge bg-@(Model.Status == TodoListMVC.Models.Status.Done ? "success" : "warning")">@Model.Status</span></p>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
