@model List<TodoListMVC.Models.TodoItem>
@using TodoListMVC.Models
@{
    ViewData["Title"] = "Task List";
}

<div class="container mt-4">
    <h2 class="mb-3">To-Do List</h2>

    <form method="get" class="row g-3 mb-4">
        <div class="col-md-3">
            <select name="category" class="form-select">
                <option value="">All Categories</option>
                @foreach (var cat in Enum.GetNames(typeof(Category)))
                {
                    <option value="@cat">@cat</option>
                }
            </select>
        </div>
        <div class="col-md-3">
            <select name="priority" class="form-select">
                <option value="">All Priorities</option>
                @foreach (var p in Enum.GetNames(typeof(Priority)))
                {
                    <option value="@p">@p</option>
                }
            </select>
        </div>
        <div class="col-md-3">
            <select name="status" class="form-select">
                <option value="">All Statuses</option>
                @foreach (var s in Enum.GetNames(typeof(Status)))
                {
                    <option value="@s">@s</option>
                }
            </select>
        </div>
        <div class="col-md-3 d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">Filter</button>
            <a class="btn btn-success" href="/Todo/Create">+ New Task</a>
        </div>
    </form>

    <table class="table table-bordered table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th style="width: 38%;">Title</th>
                <th style="width: 13%;">Category</th>
                <th style="width: 13%;">Priority</th>
                <th style="width: 13%;">Status</th>
                <th style="width: 23%;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var task in Model)
            {
                <tr>
                    <td class="text-truncate">@task.Title</td>
                    <td>@task.Category</td>
                    <td>@task.Priority</td>
                    <td>
                        <span class="badge bg-@(task.Status == Status.Done ? "success" : "warning")">
                            @task.Status
                        </span>
                    </td>
                    <td>
                        <div class="d-flex flex-wrap gap-2">
                            <a href="/Todo/Details/@task.Id" class="btn btn-sm btn-info">View</a>
                            <a href="/Todo/Edit/@task.Id" class="btn btn-sm btn-warning">Edit</a>
                            <a href="/Todo/Delete/@task.Id" class="btn btn-sm btn-danger">Delete</a>
                            @if (task.Status == Status.Pending)
                            {
                                <a href="/Todo/MarkAsDone/@task.Id" class="btn btn-sm btn-success">Done</a>
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
