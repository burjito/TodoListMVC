@model List<TodoListMVC.Models.TodoItem>
@{
    ViewData["Title"] = "Deleted Tasks";
}

<div class="container mt-4">
    <h2>Deleted Tasks</h2>
    <table class="table table-bordered table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>Title</th>
                <th>Category</th>
                <th>Priority</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var task in Model)
            {
                <tr>
                    <td>@task.Title</td>
                    <td>@task.Category?.Name</td>
                    <td>@task.Priority</td>
                    <td><span class="badge bg-danger">@task.Status</span></td>
                    <td>
                        <form asp-action="Restore" asp-route-id="@task.Id" method="post" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-success" onclick="return confirm('Restore this task?');">Restore</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
