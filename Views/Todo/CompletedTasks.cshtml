@model List<TodoListMVC.Models.TodoItem>
@{
    ViewData["Title"] = "Completed Tasks";
}

<div class="container mt-4">
    <h2>Completed Tasks</h2>
    <table class="table table-bordered table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th style="width:36%;">Title</th>
                <th style="width:13%;">Category</th>
                <th style="width:13%;">Priority</th>
                <th style="width:13%;">Status</th>
                <th style="width:25%;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var task in Model)
            {
                <tr>
                    <td>@task.Title</td>
                    <td>@task.Category?.Name</td>
                    <td>@task.Priority</td>
                    <td><span class="badge bg-success">@task.Status</span></td>
                    <td>
                        <a href="@Url.Action("Details", "Todo", new { id = task.Id })" class="btn btn-sm btn-primary">View</a>
                        <a href="@Url.Action("Edit", "Todo", new { id = task.Id })" class="btn btn-sm btn-warning">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>